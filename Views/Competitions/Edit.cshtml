@model CompetitionManagment.Models.Competition

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Competition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" id="startDateInput" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Start Date</label>
                <input asp-for="EndDate" class="form-control" id="endDateInput" />
                <span asp-validation-for="EndDate" class="text-danger" data-valmsg-for="EndDate" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompetitionType" class="control-label">Competition Type</label>
                <select asp-for="CompetitionType" class="form-control" asp-items="ViewBag.CompetitionType"></select>
                <span asp-validation-for="CompetitionType" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="WinnerName" value="No Winner" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back</a>
</div>

@{
    var startDateValue = Model.StartDate?.ToString("yyyy-MM-dd");
    if (startDateValue != null)
    {
        <text>
            <script>
                document.getElementById('startDateInput').value = '@startDateValue';
            </script>
        </text>
    }
}

@{
    var endDateValue = Model.EndDate?.ToString("yyyy-MM-dd");
    if (endDateValue != null)
    {
        <text>
            <script>
                document.getElementById('endDateInput').value = '@endDateValue';
            </script>
        </text>
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

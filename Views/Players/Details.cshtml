@model CompetitionManagment.Models.Player

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Age
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            Team
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
        
        @if (Model.Picture != null)
        {
            <dt class="col-sm-2">
                Picture
            </dt>
            <dd class="col-sm-10">
                <img src="@($"data:image;base64,{Convert.ToBase64String(Model.Picture)}")" alt="Player Picture" class="img-thumbnail" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success btn-xs">Edit</a>
    <a asp-action="ViewPlayers" class="btn btn-info btn-xs">See Full List</a> 
    <a href="javascript:history.back()" class="btn btn-warning btn-xs">Back</a>

</div>

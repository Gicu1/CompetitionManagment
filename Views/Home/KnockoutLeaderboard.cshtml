@model List<TeamScore>

<h1>Leaderboard</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Team</th>
            <th>Wins</th>
            <th>Goals Scored</th>
            <th>Goals Conceded</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Team.Name</td>
                <td>@Model[i].Score</td>
                <td>@Model[i].GoalsScored</td>
                <td>@Model[i].GoalsConceded</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-warning" href="@Url.Action("Teams", "Home", new { competitionId = ViewData["CompetitionId"] })">Back</a>
